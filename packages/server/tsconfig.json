{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],

    /* Specify what module code is generated. */
    "module": "CommonJS",

    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "../../dist/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "$/*": ["./*"],
      "$controller": ["./controller"],
      "$model": ["./model"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "build"]
}
